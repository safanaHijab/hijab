{
    "version": 2,
    "builds": [
        {
            "src": "api/index.php",
            "use": "@vercel/php"
        },
        {
            "src": "package.json",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "api/index.php"
        }
    ],
    "scripts": {
        "build": "npx tailwindcss -i ./resources/css/app.css -o ./public/css/app.css",
        "vercel-build": "npm run build"
    }
}